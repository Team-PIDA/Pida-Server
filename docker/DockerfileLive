FROM amazoncorretto:21
ENV TZ="Asia/Seoul"

ARG PROFILE
ENV PROFILE=${PROFILE}

RUN mkdir -p /service/pida
COPY core/core-api/build/libs/core-api-0.1.0.jar /service/pida/core-api-0.1.0.jar

EXPOSE 8080

CMD java \
    -Dspring.profiles.active=${PROFILE} \
    -Xmx4096m \
    -jar /service/pida/core-api-0.1.0.jar
